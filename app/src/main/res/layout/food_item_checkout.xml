<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentlayout"
    android:orientation="vertical"
    android:layout_width="245dp"
    android:layout_height="145dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_ln_primary"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="4dp"
    android:scaleX="0.75"
    android:scaleY="0.75"
    android:elevation="3dp">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shape_roundRect_bottomLeftRadius="12dp"
        app:shape_roundRect_topLeftRadius="12dp"
        app:shape_roundRect_topRightRadius="12dp"
        app:shape_roundRect_bottomRightRadius="12dp">
        <ImageView
            android:id="@+id/ffood"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <TextView
        android:id="@+id/txt_foodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="1sp"
        android:textColor="#00000000"/>

</LinearLayout>